<!-- stylesheet -->
<link rel="stylesheet" href="/css/admin/style.css">
<link rel="stylesheet" href="/css/admin/table-style.css">
<link rel="stylesheet" href="/css/admin/pagination.css">
<link rel="stylesheet" href="/css/admin/search-bar-style.css">
<link rel="stylesheet" href="/css/admin/button-add-style.css">
<link rel="stylesheet" href="/css/admin/manager/list-manager-style.css">
<!-- stylesheet -->

<div class="container">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="nav-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./list-manager-page.html">Người quản lý</a></li>
            <li class="breadcrumb-item active" aria-current="page">Xem danh sách người quản lý</li>
        </ol>
        </nav>
        <div class="searchbar">
            <input type="text" class="searchbar-input" placeholder="Tìm kiếm người quản lý">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        <div id="list-manager-table" class="table-responsive" style="height: 360px;width: 80%; margin: auto; margin-top: 30px;">
            <table class="table table-striped">
                <thead>
                    <th class="th-style">STT</th>
                    <th class="th-style">Tên tài khoản</th>
                    <th class="th-style">Trạng thái tài khoản</th>
                </thead>
                <tbody>
                    {{#each managers}}
                        <tr>
                            <td class="table-stt"><a href="/admin/manager/{{_id}}/show" style="color:black; text-decoration: none">{{stt}}</a></td>
                            <td class="table-name"><a href="/admin/manager/{{_id}}/show" style="color:black; text-decoration: none">{{username}}</a></td>
                            {{#ifEquals status true}}
                            <td class="table-lock">
                                <a href="/admin/manager/{{_id}}/updateStatus?_method=PUT" style="color:#1C658C"
                                    onclick="return confirm('Are you sure you want to lock manager?')">
                                    <span class="fa-solid fa-lock-open"></span>
                                </a>
                            </td>
                            {{else}}
                            <td class="table-button">
                                <a href="/admin/manager/{{_id}}/updateStatus?_method=PUT" style="color:#1C658C"
                                    onclick="return confirm('Are you sure you want to unlock manager?')">
                                    <span class="fa-solid fa-lock"></span>
                                </a>
                            </td>
                            {{/ifEquals}}
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="page-container">
            <button class="first-page" disabled>
            <i class="fas fa-angle-double-left"></i>
            </button>
            <button class="prev-page" disabled>
            <i class="fas fa-angle-left"></i>
            </button>
            <div id="pagination"></div>
            <button class="next-page">
            <i class="fas fa-angle-right"></i>
            </button>
            <button class="last-page">
            <i class="fas fa-angle-double-right"></i>
            </button>
        </div>
        <a href="/admin/manager/add">
        <div class="button-add">
            <i class="fa-solid fa-plus fa-3x"></i>
        </div>
</div>

<!-- JS -->
<script src="js/add-list-manager-table.js"></script>
<script src="../js/pagination.js"></script>
<!-- JS -->