<!-- stylesheet -->
<link rel="stylesheet" href="/css/admin/style.css">
<link rel="stylesheet" href="/css/admin/manager/add-manager-style.css">
<!-- stylesheet -->

<div class="container">
    <nav style="--bs-breadcrumb-divider: '>'; --bs-breadcrumb-item-padding-x: 2px; --bs-breadcrumb-divider-color: #A19C9C; --bs-breadcrumb-font-size: 24sp;" aria-label="breadcrumb" class="nav-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin/manager">Người quản lý</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm người quản lý</li>
        </ol>
        </nav>
    <div class="content-min">
        <h3 class="form-heading mb-3 p-2 ">Thêm tài khoản người quản lý</h3>
        <form class="form-add-manager p-2" action="/admin/manager/add" method="post">
            <div class="form-group row">
                <label for="username" class="col-lg-5 col-sm-5 col-form-label">Tên người dùng</label>
                <div class="col-lg-7 col-sm-7">
                    <input type="text" class="form-control" id="username" name="username" required>
                </div> 
            </div>
            <div class="form-group row">
            <label for="password" class="col-lg-5 col-sm-5 col-form-label">Mật khẩu</label>
            <div class="col-lg-7 col-sm-7">
                <input type="password"  onchange="checkPass();" class="form-control" id="password" name="password" required>
            </div>
            </div>
            <div class="form-group row">
            <label for="re-password" class="col-lg-5 col-sm-5 col-form-label">Nhập lại mật khẩu</label>
            <div class="col-lg-7 col-sm-7">
                <input type="password"  onchange="checkPass();" class="form-control" id="re-password" name="rePassword" required>
            </div>
            </div>
            <div class="form-group row">
            <label  class="col-sm-5 col-form-label">Phân quyền</label>
            <div class="col-sm-7">
                <table>
                <tr>
                    <td><input name="patient" id="patient" value="patient" type="checkbox"></td>
                    <th><label for="patient" class="p-2">Người bệnh</label></th>
                </tr>
                <tr>
                    <td><input name="necessities" id="necessities" value="necessities" type="checkbox"></td>
                    <th><label for="necessities">Nhu yếu phẩm</label></th>
                </tr>
                </table>
                
            </div>
            </div>
            <div class="row button">
            <div class="col-sm-10">
                <button id="submit" type="submit" class="btn">Lưu</button>
            </div>
            </div>
        </form>
    </div>
</div>

<!-- JS -->
<script>
    function checkPass(){
         var pass  = document.getElementById("password").value;
         var rpass  = document.getElementById("re-password").value;
        if(pass != rpass){
            document.getElementById("submit").disabled = true;
            alert("Entered Password is not matching!! Try Again");
        }else{
            document.getElementById("submit").disabled = false;
        }
}
</script>
<!-- JS -->